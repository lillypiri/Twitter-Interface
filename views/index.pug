                                            C35,4.1,30.9,0,25.8,0L25.8,0z")
                                        strong= tweet.favorite_count
        .grid-33
            .app--section
                ul.app--user--list
                    each friend in friends
                        li
                            .circle--fluid
                                .circle--fluid--cell.circle--fluid--primary
                                    a.app--tweet--author
                                        .app--avatar(style=`background-image: url(${friend.profile_image_url_https})`)
                                            img(src="/static/images/f-spore.png")
                                        h4= friend.name
                                        p= friend.screen_name
                                .circle--fluid--cell
                                    a.button.button-text Unfollow
        .grid-33
            .app--section
                ul.app--message--list
                    each group in messages
                        li
                            h3
                                | Conversation with 
                                a= group[0].sender.name
                            ul.app--message--conversation
                                each message in group
                                    if message.me
                                        li.app--message--me
                                            .app--avatar(style=`background-image: url(${verifycred.profile_image_url_https})`)
                                                img(src=verifycred.profile_image_url_https)
                                            p.app--message--text= message.text
                                            p.app--message--timestamp= moment(message.created_at).fromNow()
                                    else
                                        li.app--message
                                            .app--avatar(style=`background-image: url(${message.sender.profile_image_url_https})`)
                                                img(src=message.sender.profile_image_url_https)
                                            p.app--message--text= message.text
                                            p.app--message--timestamp= moment(message.created_at).fromNow()
